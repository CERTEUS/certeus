# CERTEUS: line-endings policy
* text=auto

# Source files -> LF
*.py     text eol=lf
*.md     text eol=lf
*.json   text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.toml   text eol=lf
*.lock   text eol=lf
*.csv    text eol=lf
*.txt    text eol=lf
*.lex    text eol=lf
*.sh     text eol=lf
Makefile text eol=lf
.gitattributes text eol=lf
.gitignore     text eol=lf
.editorconfig  text eol=lf
CODEOWNERS     text eol=lf
LICENSE        text eol=lf

# Proof artefacts -> LF
*.smt2 text eol=lf
*.lfsc text eol=lf
*.drat text eol=lf

# Windows scripts -> CRLF
*.ps1  text eol=crlf
*.bat  text eol=crlf

# Binary -> never touch
*.pdf   -text
*.docx  -text
*.xlsx  -text
*.pptx  -text
*.png   -text
*.jpg   -text
*.jpeg  -text
*.gif   -text
*.zip   -text
*.7z    -text
*.exe   -text
*.dll   -text
*.pkl   -text
*.onnx  -text
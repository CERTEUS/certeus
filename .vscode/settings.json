{
    // Ustawienia dla urządzeń mobilnych
    "editor.fontSize": 14,
    "editor.lineHeight": 24,
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    "workbench.colorTheme": "Default Light Modern",
    "workbench.preferredLightColorTheme": "Default Light Modern",
    "workbench.preferredDarkColorTheme": "Default Light Modern",
    "workbench.colorCustomizations": {
        "[Default Light Modern]": {
            "editor.background": "#ffffff",
            "sideBar.background": "#f8f8f8",
            "activityBar.background": "#f8f8f8",
            "tab.activeBackground": "#ffffff",
            "tab.inactiveBackground": "#f0f0f0"
        }
    },
    "workbench.statusBar.visible": true,
    "window.zoomLevel": 0.5,
    "editor.accessibilitySupport": "on",
    "editor.scrollBeyondLastLine": false,
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.lineHeight": 1.2,
    "workbench.activityBar.location": "top",
    "workbench.sideBar.location": "left",
    "editor.mouseWheelZoom": true,
    "editor.renderControlCharacters": false,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "smooth",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderWhitespace": "selection",
    // Optymalizacje wydajności dla urządzeń mobilnych
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/node_modules": true,
        "**/.venv": true,
        "**/venv": true,
        "**/.env": true,
        "**/env": true
    },
    // Port forwarding i serwery
    "remote.autoForward": true,
    "remote.restoreForwardedPorts": true,
    "remote.portsAttributes": {
        "3056": {
            "protocol": "http",
            "label": "Pylance Server",
            "onAutoForward": "openPreview"
        }
    },
    // Wspólne ustawienia dla wszystkich AI
    "editor.inlineSuggest.enabled": true,
    "editor.acceptSuggestionOnEnter": "on",
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.startupPrompt": "never",
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.emptyWindow": true,
    "security.workspace.trust.untrustedFiles": "open",
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "on",
        "strings": "on"
    },
    "editor.suggestSelection": "first",
    "editor.suggest.showWords": true,
    "editor.suggest.preview": true,
    "editor.suggest.shareSuggestSelections": true,
    // Optymalizacje wydajności VS Code
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.enablePreview": false,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 8,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "editor.formatOnSave": true,
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.logLevel": "Error",
    "python.analysis.stubPath": "typings",
    // Python analysis exclusions - fix for 18K+ problems
    "python.analysis.exclude": [
        ".venv/**",
        "**/.venv/**",
        "**/node_modules/**",
        "**/__pycache__/**",
        "**/.*",
        ".git/**",
        "**/.git/**"
    ],
    "python.analysis.ignore": [
        "**/.venv",
        "**/.venv/**"
    ],
    "python.analysis.autoSearchPaths": false,
    "python.analysis.indexing": false,
    "python.analysis.enableExtensions": false,
    "python.languageServer": "None",
    "python.analysis.disabled": [
        "unresolved-import",
        "undefined-variable",
        "import-error",
        "no-member"
    ],
    "python.linting.enabled": false,
    "python.analysis.include": [
        "__init__.py",
        "main.py",
        "conftest.py"
    ],
    // GitHub Copilot
    "github.copilot.enable": {
        "*": true
    },
    "github.copilot.advanced": {
        "automaticPanelFocus": true,
        "indentationMode": true,
        "showUnauthorizedModal": false,
        "showAuthorizedModal": false,
        "showEditorCompletions": true,
        "enableAutoCompletions": true,
        "clearOnSend": false,
        "saveHistory": true,
        "noConfirm": true
    },
    "github.copilot.editor.enableAutoCompletions": true,
    "github.copilot.chat.autoFollowUpSuggestions": true,
    "github.copilot.chat.clearOnSend": false,
    "github.copilot.chat.welcomeMessage": "none",
    // OpenAI Codex
    "openai.enable": {
        "*": true
    },
    "openai.codex.suggestInRealTime": true,
    "openai.codex.inlineSuggest.enable": true,
    "openai.codex.maxTokens": 800,
    "openai.codex.temperature": 0.7,
    "openai.codex.autoTrigger": true,
    "openai.codex.advanced": {
        "automaticPanelFocus": true,
        "indentationMode": true,
        "showEditorCompletions": true,
        "enableAutoCompletions": true,
        "clearOnSend": false,
        "saveHistory": true,
        "noConfirm": true
    },
    "openai.codex.chat": {
        "autoFollowUpSuggestions": true,
        "clearOnSend": false,
        "saveHistory": true,
        "noConfirm": true,
        "welcomeMessage": "none"
    },
    // Google Gemini
    "gemini.enable": {
        "*": true
    },
    "gemini.advanced": {
        "automaticPanelFocus": true,
        "indentationMode": true,
        "showEditorCompletions": true,
        "enableAutoCompletions": true,
        "clearOnSend": false,
        "saveHistory": true,
        "noConfirm": true
    },
    "gemini.chat": {
        "autoFollowUpSuggestions": true,
        "clearOnSend": false,
        "saveHistory": true,
        "noConfirm": true,
        "welcomeMessage": "none"
    },
    "gemini.suggestInRealTime": true,
    "gemini.inlineSuggest.enable": true,
    
    // Environment consistency settings
    "python.defaultInterpreterPath": "./.venv/bin/python",
    "python.terminal.activateEnvironment": true,
    "python.analysis.persistAllIndices": false,
    "python.analysis.userFileIndexingLimit": 200,
    "python.analysis.packageIndexDepths": [
        {"name": ".", "depth": 2},
        {"name": "certeus", "depth": 3},
        {"name": "core", "depth": 3},
        {"name": "services", "depth": 3}
    ],
    
    // Cross-platform file handling
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.encoding": "utf8",
    
    // Performance optimizations
    "search.exclude": {
        "**/.venv": true,
        "**/venv": true,
        "**/env": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/node_modules": true,
        "**/.git": true
    },
    "files.watcherExclude": {
        "**/.venv/**": true,
        "**/venv/**": true,
        "**/env/**": true,
        "**/__pycache__/**": true,
        "**/*.pyc": true,
        "**/node_modules/**": true,
        "**/.git/**": true
    }
}
{
    "name": "CERTEUS ULTIMATE AUTONOMOUS PROFILE",
    "description": "Zero manual approvals, zero confirmations, zero prompts",
    "settings": {
        "workbench.dialogs.useSimpleDialogs": true,
        "window.confirmBeforeClose": "never",
        "window.confirmSaveUntitledWorkspace": false,
        "window.restoreWindows": "none",
        "workbench.startupEditor": "none",
        "workbench.welcome.enabled": false,
        "workbench.tips.enabled": false,
        "workbench.enableExperiments": false,
        "workbench.settings.enableNaturalLanguageSearch": false,
        "workbench.releaseNotes.enabled": false,
        "security.workspace.trust.enabled": false,
        "security.workspace.trust.startupPrompt": "never",
        "security.workspace.trust.banner": "never",
        "security.workspace.trust.emptyWindow": false,
        "security.workspace.trust.untrustedFiles": "open",
        "security.allowedUNCHosts": ["*"],
        "security.restrictUNCAccess": false,
        "terminal.integrated.confirmOnExit": "never",
        "terminal.integrated.confirmOnKill": "never",
        "terminal.integrated.allowChords": false,
        "terminal.integrated.allowWorkspaceConfiguration": true,
        "terminal.integrated.enablePersistentSessions": false,
        "terminal.integrated.showLinkHover": false,
        "terminal.integrated.persistentSessionReviveProcess": "never",
        "terminal.integrated.commandsToSkipShell": [],
        "terminal.integrated.automationProfile.linux": {
            "path": "/bin/bash",
            "args": ["-l"]
        },
        "explorer.confirmDelete": false,
        "explorer.confirmDragAndDrop": false,
        "explorer.openEditors.visible": 0,
        "extensions.autoCheckUpdates": false,
        "extensions.autoUpdate": false,
        "extensions.ignoreRecommendations": true,
        "extensions.showRecommendationsOnlyOnDemand": false,
        "extensions.confirmedUriHandlerExtensionIds": ["*"],
        "extensions.supportUntrustedWorkspaces": {"*": {"supported": true, "version": "*"}},
        "extensions.supportVirtualWorkspaces": {"*": true},
        "git.confirmSync": false,
        "git.enableSmartCommit": true,
        "git.smartCommitChanges": "all",
        "git.confirmEmptyCommits": false,
        "git.confirmNoVerifyCommit": false,
        "git.showPushSuccessNotification": false,
        "git.showCommitInput": false,
        "git.showInlineOpenFileAction": false,
        "git.suggestSmartCommit": false,
        "git.enableCommitSigning": false,
        "git.useCommitInputAsStashMessage": false,
        "git.verboseCommit": false,
        "git.requireGitUserConfig": false,
        "git.autoStash": true,
        "git.autofetch": true,
        "git.autofetchPeriod": 180,
        "git.fetchOnPull": true,
        "git.pruneOnFetch": true,
        "git.pullBeforeCheckout": true,
        "git.rebaseWhenSync": true,
        "task.allowAutomaticTasks": "on",
        "task.autoDetect": "on",
        "task.showDecorations": false,
        "task.problemMatchers.neverPrompt": true,
        "task.saveBeforeRun": "always",
        "task.reconnection": true,
        "task.quickOpen.detail": false,
        "task.quickOpen.skip": true,
        "debug.console.acceptSuggestionOnEnter": "on",
        "debug.internalConsoleOptions": "neverOpen",
        "debug.openDebug": "neverOpen",
        "debug.showInStatusBar": "never",
        "debug.confirmOnExit": "never",
        "testing.automaticallyOpenPeekView": "never",
        "testing.automaticallyOpenPeekViewDuringAutoRun": false,
        "testing.followRunningTest": false,
        "testing.openTesting": "neverOpen",
        "notifications.showErrors": false,
        "notifications.showWarnings": false,
        "notifications.showInfo": false,
        "problems.showCurrentInStatus": false,
        "problems.visibility": false,
        "github.copilot.enable": {"*": true},
        "github.copilot.advanced": {
            "automaticPanelFocus": true,
            "indentationMode": true,
            "showUnauthorizedModal": false,
            "showAuthorizedModal": false,
            "showEditorCompletions": true,
            "enableAutoCompletions": true,
            "clearOnSend": false,
            "saveHistory": true,
            "noConfirm": true,
            "autonomousExecution": true,
            "requireManualApproval": false
        },
        "github.copilot.editor.enableAutoCompletions": true,
        "github.copilot.chat.autoFollowUpSuggestions": true,
        "github.copilot.chat.clearOnSend": false,
        "github.copilot.chat.welcomeMessage": "none",
        "github.copilot.chat.autonomousMode": true,
        "github.copilot.chat.requireConfirmation": false,
        "chat.experimental.autoExecuteCommands": true,
        "chat.experimental.requireConfirmation": false,
        "copilot.autonomousMode": true,
        "copilot.requireConfirmation": false,
        "ai.autonomousExecution": true,
        "ai.requireManualApproval": false,
        "automation.enabled": true,
        "automation.requireConfirmation": false,
        "certeus.autonomousMode": true,
        "certeus.requireApproval": false,
        "certeus.autoExecute": true,
        "certeus.noConfirm": true,
        "vscode.autonomous": true,
        "vscode.requireConfirmation": false,
        "terminal.autonomous": true,
        "terminal.noPrompts": true
    }
}

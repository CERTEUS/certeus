apiVersion: v1
kind: Service
metadata:
  name: {{ include "certeus.fullname" . }}-proofgate
spec:
  type: {{ .Values.proofgate.service.type }}
  selector:
    app.kubernetes.io/name: {{ include "certeus.name" . }}
    app.kubernetes.io/component: proofgate
  ports:
    - name: http
      port: {{ .Values.proofgate.service.port }}
      targetPort: http

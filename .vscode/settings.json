{
    // Ustawienia dla urządzeń mobilnych
    "editor.fontSize": 14,
    "editor.lineHeight": 24,
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    "workbench.colorTheme": "Default Dark Modern",
    "workbench.statusBar.visible": true,
    "window.zoomLevel": 0.5,
    "editor.accessibilitySupport": "on",
    "editor.scrollBeyondLastLine": false,
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.lineHeight": 1.2,
    "workbench.activityBar.location": "top",
    "workbench.sideBar.location": "right",
    "editor.mouseWheelZoom": true,
    "editor.renderControlCharacters": false,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "smooth",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderWhitespace": "selection",
    // Optymalizacje wydajności dla urządzeń mobilnych
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/node_modules": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.hg/store/**": true,
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true
    },
    // Port forwarding i serwery
    "remote.autoForward": true,
    "remote.restoreForwardedPorts": true,
    "remote.portsAttributes": {
        "3056": {
            "protocol": "http",
            "label": "Pylance Server",
            "onAutoForward": "openPreview"
        }
    },
    // Wspólne ustawienia dla wszystkich AI
    "editor.inlineSuggest.enabled": true,
    "editor.acceptSuggestionOnEnter": "on",
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.startupPrompt": "never",
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.emptyWindow": true,
    "security.workspace.trust.untrustedFiles": "open",
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "on",
        "strings": "on"
    },
    "editor.suggestSelection": "first",
    "editor.suggest.showWords": true,
    "editor.suggest.preview": true,
    "editor.suggest.shareSuggestSelections": true,
    // Optymalizacje wydajności VS Code
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.enablePreview": false,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 8,
    "editor.minimap.enabled": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "editor.formatOnSave": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.typeCheckingMode": "basic",
    // GitHub Copilot
    "github.copilot.enable": {
        "*": true
    },
    "github.copilot.advanced": {
        "automaticPanelFocus": true,
        "indentationMode": true,
        "showUnauthorizedModal": false,
        "showAuthorizedModal": false,
        "showEditorCompletions": true,
        "enableAutoCompletions": true,
        "clearOnSend": false,
        "saveHistory": true,
        "noConfirm": true
    },
    "github.copilot.editor.enableAutoCompletions": true,
    "github.copilot.chat.autoFollowUpSuggestions": true,
    "github.copilot.chat.clearOnSend": false,
    "github.copilot.chat.welcomeMessage": "none",
    // OpenAI Codex
    "openai.enable": {
        "*": true
    },
    "openai.codex.suggestInRealTime": true,
    "openai.codex.inlineSuggest.enable": true,
    "openai.codex.maxTokens": 800,
    "openai.codex.temperature": 0.7,
    "openai.codex.autoTrigger": true,
    "openai.codex.advanced": {
        "automaticPanelFocus": true,
        "indentationMode": true,
        "showEditorCompletions": true,
        "enableAutoCompletions": true,
        "clearOnSend": false,
        "saveHistory": true,
        "noConfirm": true
    },
    "openai.codex.chat": {
        "autoFollowUpSuggestions": true,
        "clearOnSend": false,
        "saveHistory": true,
        "noConfirm": true,
        "welcomeMessage": "none"
    },
    // Google Gemini
    "gemini.enable": {
        "*": true
    },
    "gemini.advanced": {
        "automaticPanelFocus": true,
        "indentationMode": true,
        "showEditorCompletions": true,
        "enableAutoCompletions": true,
        "clearOnSend": false,
        "saveHistory": true,
        "noConfirm": true
    },
    "gemini.chat": {
        "autoFollowUpSuggestions": true,
        "clearOnSend": false,
        "saveHistory": true,
        "noConfirm": true,
        "welcomeMessage": "none"
    },
    "gemini.suggestInRealTime": true,
    "gemini.inlineSuggest.enable": true
}
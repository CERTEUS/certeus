{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Data PCO (DPCO) v0.1",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "dataset_hash": {
      "description": "sha256:<hex> or 64-hex",
      "type": "string",
      "pattern": "^(sha256:)?[0-9a-fA-F]{64}$"
    },
    "lineage": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "dp_epsilon": {
      "type": "number",
      "minimum": 0
    },
    "consent_refs": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    }
  },
  "required": ["dataset_hash", "lineage", "dp_epsilon"]
}

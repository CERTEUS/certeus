# +=====================================================================+
# |                              CERTEUS                                |
# +=====================================================================+
# | FILE:   .editorconfig                                               |
# | ROLE:   Editor defaults (EOL, charset, newline)                     |
# | DATE:   2025-08-17                                                  |
# +=====================================================================+

root = true

[*]
charset = utf-8
end_of_line = lf          # wymuś LF (stabilne z ruff-format i CI)
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false  # pozwól na trailing w Markdown

[*.ps1]
end_of_line = crlf                # PowerShell preferuje CRLF lokalnie

[*.{bat,cmd}]
end_of_line = crlf                # skrypty cmd też CRLF

*           text=auto eol=lf

# Windows scripts
*.ps1       text eol=crlf
*.bat       text eol=crlf

# Unix scripts
*.sh        text eol=lf

# Tekst
*.md        text eol=lf
*.yaml      text eol=lf
*.yml       text eol=lf
*.json      text eol=lf
*.py        text eol=lf
*.toml      text eol=lf

# Grafika / binaria
*.png       filter=lfs diff=lfs merge=lfs -text
*.jpg       filter=lfs diff=lfs merge=lfs -text
*.jpeg      filter=lfs diff=lfs merge=lfs -text
*.xlsx      filter=lfs diff=lfs merge=lfs -text
*.pdf       filter=lfs diff=lfs merge=lfs -text

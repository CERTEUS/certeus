{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/certeus.provenance.v1.json",
  "title": "CERTEUS Provenance v1",
  "type": "object",
  "required": ["_schema", "build_id", "commit", "runner", "timestamp", "materials", "steps"],
  "properties": {
    "_schema": { "type": "string", "const": "certeus.provenance.v1" },
    "build_id": { "type": "string" },
    "commit": { "type": "string", "minLength": 7 },
    "runner": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "environment": {
      "type": "object",
      "properties": {
        "python": { "type": "string" },
        "platform": { "type": "string" }
      },
      "additionalProperties": true
    },
    "materials": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["uri", "digest"],
        "properties": {
          "uri": { "type": "string" },
          "digest": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "status"],
        "properties": {
          "name": { "type": "string" },
          "status": { "type": "string", "enum": ["success", "failure", "skipped"] }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": true
}


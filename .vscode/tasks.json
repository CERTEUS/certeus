{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Codex: Zapisz notatkę (historia)",
            "type": "shell",
            "command": "python",
            "args": [
                "scripts/codex_history.py",
                "append",
                "--role",
                "user",
                "--text",
                "${input:codexMessage}"
            ],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Codex: Remember last 5",
            "type": "shell",
            "command": "python",
            "args": [
                "scripts/codex_history.py",
                "remember",
                "--count",
                "5"
            ],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Codex: Start autosave daemon",
            "type": "shell",
            "command": "python",
            "args": [
                "scripts/codex_history.py",
                "daemon",
                "--idle-sec",
                "60"
            ],
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Codex: Push (prompt → pipe)",
            "type": "shell",
            "command": "python",
            "args": [
                "scripts/codex_history.py",
                "push",
                "--role",
                "assistant",
                "--text",
                "${input:codexMessage}"
            ]
        },
        {
            "label": "Python: Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "-m",
                "pytest",
                "-v"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Python: Install Dependencies",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/pip",
            "args": [
                "install",
                "-r",
                "requirements.txt"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Python: Format Code",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "-m",
                "black",
                "."
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Python: Lint Code",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "-m",
                "ruff",
                "check",
                "."
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Git: Push work/daily (token-aware)",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "scripts/git_push.py",
                "--to",
                "work/daily"
            ],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONUNBUFFERED": "1"
                }
            }
        }
    ]
    ,
    "inputs": [
        {
            "id": "codexMessage",
            "type": "promptString",
            "description": "Wpisz treść do zapisania w historii (Codex)",
            "default": ""
        }
    ]
}
